{
	"extends": "@tooling/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,

	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}