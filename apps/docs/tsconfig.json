{
	"extends": "@tooling/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"declaration": true,
		"preserveSymlinks": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},

	"include": [
		"next-env.d.ts",
		"next.config.mjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
